<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.pixabay.ui.search.SearchFragment"
        android:label="@string/label_search"
        tools:layout="@layout/search_fragment" />

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.pixabay.ui.detail.DetailFragment"
        android:label="@string/label_detail"
        tools:layout="@layout/detail_fragment">


        <argument
            android:name="hit"
            app:argType="com.example.pixabay.domain.model.Hit" />
    </fragment>

    <action
        android:id="@+id/action_global_to_detailsFragment"
        app:destination="@id/detailFragment"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right" />

</navigation>